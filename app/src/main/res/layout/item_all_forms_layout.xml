<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_all_forms_layout_container"
    android:orientation="vertical"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_all_forms_form_title_text_view"
        android:textColor="@color/colorPrimary"
        android:textSize="22sp"
        android:text="Antinetal Care Form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/item_all_forms_form_description_text_view"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/black"
        android:text="This is a sample description of a form acting as place holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
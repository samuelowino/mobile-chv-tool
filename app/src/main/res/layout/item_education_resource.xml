<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_all_resource_layout_container"
    android:orientation="vertical"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_all_education_resources_title_text_view"
        android:textColor="@color/colorPrimary"
        android:textSize="22sp"
        android:text="Sanitation Education"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/item_all_education_resources_description_text_view"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/black"
        android:text="Find resources on how to educate the community on sanitation practices that will improve their wellbeing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="40dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>

    <ImageView
        android:transitionName="brandTransition"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/brand_logo"
        android:layout_width="152dp"
        android:layout_height="152dp"/>

    <TextView
        android:textColor="@android:color/black"
        android:textSize="21sp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="CHV"
        android:layout_marginBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="@android:color/black"
        android:textSize="21sp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="Welcome, Sign in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:background="@drawable/text_field_backgroud"
        android:padding="12dp"
        android:layout_marginStart="4dp"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@android:color/black"
            android:text="Username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/activity_login_username_field"
            android:layout_marginTop="4dp"
            android:background="@null"
            android:hint="Enter username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <LinearLayout
        android:background="@drawable/text_field_backgroud"
        android:padding="12dp"
        android:layout_marginStart="4dp"
        android:orientation="vertical"
        android:layout_marginTop="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Password"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/activity_login_password_field"
            android:layout_marginTop="6dp"
            android:background="@null"
            android:inputType="textPassword"
            android:hint="Enter password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/activity_login_proceed_button"
        android:background="@drawable/blue_curved_background"
        android:layout_marginTop="12dp"
        android:padding="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_alignParentStart="true"
            android:textColor="@android:color/white"
            android:layout_marginStart="12dp"
            android:text="Proceed"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_action_registrations_next"
            android:layout_width="32dp"
            android:layout_height="32dp"/>

    </RelativeLayout>

</LinearLayout>